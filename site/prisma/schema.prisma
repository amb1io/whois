// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "wasm"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Domain {
  id             Int       @id @default(autoincrement())
  domain         String
  registrar      String?
  registrarId    String?   @map("registrar_id")
  registrarEmail String?   @map("registrar_email")
  reseller       String?
  statuses       Json?
  nameservers    Json?
  createdAt      DateTime? @map("created_at")
  updatedAt      DateTime? @map("updated_at")
  expiresAt      DateTime? @map("expires_at")
  processAt      DateTime  @default(now()) @map("process_at")
  subscriptions Subscription[]

  @@index([domain])
  @@index([processAt])
  @@map("domains")
}

model Subscription {
  id            Int      @id @default(autoincrement())
  endpoint      String
  auth          String
  p256dh        String
  domainId      Int      @map("domain_id")
  userId        Int      @map("user_id")
  notifyChanges Boolean  @default(false) @map("notify_changes")
  notifyExpiry  Boolean  @default(false) @map("notify_expiry")
  userRead      Boolean  @default(false) @map("user_read")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  domain        Domain   @relation(fields: [domainId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([endpoint, domainId, userId])
  @@index([domainId])
  @@index([userId])
  @@map("subscriptions")
}

model User {
  id         Int                   @id @default(autoincrement())
  email      String                @unique
  createdAt  DateTime              @default(now()) @map("created_at")
  subscriptions Subscription[]

  @@map("users")
}
